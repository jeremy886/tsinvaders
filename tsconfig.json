{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "lib" : [ "es5", "dom" ],
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        //"strict": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}